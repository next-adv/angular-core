{
    "$schema": "http://json-schema.org/schema",
    "id": "angular-core-schematic-ng-add",
    "title": "Angular-Core ng-add schematic",
    "type": "object",
    "properties": {
      "project": {
        "type": "string",
        "description": "The name of the project.",
        "$default": {
          "$source": "projectName"
        }
      },
      "welcome": {
        "description": "",
        "type": "string",
        "x-prompt": "\n\n\n+---------------------------------------------------------------------------------------+\n|                                                                                       |\n| Welcome to the Next-Adv/Angular-Core package auto-installer procedure (press any key) |\n|                                                                                       |\n+---------------------------------------------------------------------------------------+\n"
      },
      "locale": {
        "description": "App locale (http-header)",
        "type": "string",
        "default": "en",
        "enum": [
          "en",
          "it"
        ],
        "x-prompt": "(REST) Choose the app locale:"
      },
      "authIdField": {
        "description": "Define the userId field name for authentication request",
        "type": "string",
        "default": "email",
        "x-prompt": "(REST) Specify the userId field for authentication request:"
      },
      "authPwdField": {
        "description": "Define the password field name for authentication request",
        "type": "string",
        "default": "password",
        "x-prompt": "(REST) Specify the password field name for authentication request:"
      },
      "devServerUrl": {
        "description": "Define the dev server url",
        "type": "string",
        "x-prompt": "(REST) Specify the dev server url (e.g. https://domain.com:8080/api):"
      }
    },
    "required": [],
    "additionalProperties": false
  }
